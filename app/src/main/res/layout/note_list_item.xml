<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="5sp"
    app:cardCornerRadius="15sp"
    android:layout_marginStart="5sp"
    android:layout_marginEnd="5sp"
    android:layout_marginTop="7sp"
    android:layout_marginBottom="3sp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:padding="10sp"
        android:background="@color/cardview_dark_background">

        <TextView
            android:id="@+id/list_item_tanggal"
            android:layout_width="113dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="5sp"
            android:layout_marginTop="5sp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5sp"
            android:singleLine="true"
            android:text="@string/app_name"
            android:textColor="#DC1B1B"
            android:textSize="15sp"
            android:fontFamily="@font/glacial_bold" />

        <TextView
            android:id="@+id/list_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/list_item_tanggal"
            android:layout_marginStart="5sp"
            android:layout_marginEnd="5sp"
            android:singleLine="true"
            android:text="@string/app_name"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/glacial_bold" />

        <TextView
            android:id="@+id/list_item_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/list_item_title"
            android:layout_marginStart="5sp"
            android:layout_marginEnd="5sp"
            android:singleLine="true"
            android:text="@string/app_name"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/glacial_regular" />

        <TextView
            android:id="@+id/list_item_notes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/list_item_category"
            android:layout_marginStart="5sp"
            android:layout_marginEnd="5sp"
            android:singleLine="true"
            android:text="@string/app_name"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/glacial_regular" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>